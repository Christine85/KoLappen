@model KoLappen.ViewModels.PostListVM[]
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"


<div>
    @foreach (var item in Model)
    {
        <b>@item.Firstname @item.Lastname - </b>
        @item.PostText;
        <br />
        <a href="@item.Link" target="_blank">@item.Link</a>;
        <br />
        @item.TimePosted
        <br />
        <br />
    }
</div>

