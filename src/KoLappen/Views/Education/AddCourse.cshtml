@model KoLappen.ViewModels.AddCourseVM
@addTagHelper"*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = null;
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Registrera kurs</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="~/css/kolappen.css" rel="stylesheet" />

</head>
<body>
    <div style="background-image: url(../images/academicwork_background2.jpg); background-position: 50% 50%;">
        <header class="mainHeader">
            <img src="http://academy.academicwork.se/wp-content/uploads/2016/02/Academy_250x100.png" />
        </header>
        <section class="loginimg">
            <center>
                <form asp-controller="Account" asp-action="AddCourse">                                        
                    <label asp-for="CourseName"></label>
                    <input asp-for="CourseName" class="form-control custom" placeholder="Kurs namn" />
                    <span asp-validation-for="CourseName"></span>
                    <br />
                    <label asp-for="Semester"></label>
                    <input asp-for="Semester" class="form-control custom" placeholder="Termin" />
                    <span asp-validation-for="Semester"></span>
                    <br />
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control custom" placeholder="Plats" />
                    <span asp-validation-for="Location"></span>
                    <br />
                    <button type="submit" value="Register" class="btn btn-success">Registrera</button>
                </form>
            </center>
        </section>
    </div>
    <footer class="mainFooter">
        <p>HOME OF THE YOUNG PROFESSIONALS</p>
    </footer>
</body>
</html>
