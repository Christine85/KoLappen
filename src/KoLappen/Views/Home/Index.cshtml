@using KoLappen.ViewModels
@model AddPostVM
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"


@{
    ViewBag.Title = "AWA Intranet";
}
<link href="~/css/kolappen.css" rel="stylesheet" />


<div class="row" id="mainScrollable">
    <div class="col-md-6" id="commentRightBorder">
        <h2 style="font-weight: 700; color: #ff0000">Emelie informerar</h2> @* admin.Name informerar *@
        <p>
            @*<textarea rows="10" cols="60">*@
            <br /><br />Hemsidan:
            <br /><br />Kalender, så enkelt som möjligt.
            <br /><br />(Gemensamt, kopplat till Outlook för att ha i mobilen?)
            <br /><br />Informationsflöde (Internt, inga kunder.)
            <br /><br />Kategorisering (För att slippa scrolla.)
            <br /><br />Utvärderingar (Användarvänligt, kan läsa av resultatet och kunna exportera, excel, pdf.)
            <br /><br />Fylla i profil om geografisk placering (Lätt att se var folk vill gärna jobba.)
            <br /><br />Skapa CV/ta in information från Linkedin (Ersätta Cinode? LinkedIn API?)
            <br /><br />"Titta på" konton (ITT (IT Team Manager) kanske ha konton utöver Admin, Elev, Lärare?Boka in personliga framtida möten efter skolgången, fika etc. (Behålla elever även efter kursen)
            @*</textarea>*@
        </p>
    </div>

    @*<div class="col-md-2"></div>*@

    <div class="col-md-6" id="commentLeftBorder">
        <h2>Klassens inlägg</h2>

        <div>
            @Component.Invoke("ClassPosts")
        </div>


    </div>
</div>




<br />

<div class="row">
    @*<div class="col-md-5" style="background-color: red">hej</div>


        <div class="col-md-2" style="background-color: blue">hå</div>*@


    <div class="col-md-1 col-md-offset-11">


        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#newPost">Nytt inlägg</button>



        <!-- Modal -->
        <div id="newPost" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" style="font-weight: bold">Nytt inlägg</h4>
                    </div>
                    <div class="modal-body">
                        <b>Text</b>
                        <textarea class="form-control" rows="7" style="min-width: 100%"></textarea>
                        <br />
                        <b>Länk</b>
                        <textarea class="form-control" rows="1" style="min-width: 100%"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Avbryt</button>

                        <div asp-validation-summary="ValidationSummary.All"></div>
                        <form asp-controller="Post" asp-action="AddPost">
                            <label asp-for="PostText"></label>
                            <input asp-for="PostText" />
                            <span asp-validation-for="PostText"></span>
                            <br />
                            <label asp-for="Link"></label>
                            <input asp-for="Link" />
                            <span asp-validation-for="Link"></span>
                            <br />


                            <input type="submit" value="Posta inlägg" />
                        </form>

                        @*<button type="button" class="btn btn-success" data-toggle="modal" data-target="#youFool">Skapa inlägg</button>*@
                    </div>
                </div>

            </div>
        </div>


        <!-- Modal -->
        <div id="youFool" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Men lurad</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Det går ju inte att göra några inlägg ännu......
                            <br />
                            Försök igen senare.........
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Avbryt</button>
                    </div>
                </div>

            </div>
        </div>


    </div>
</div>

