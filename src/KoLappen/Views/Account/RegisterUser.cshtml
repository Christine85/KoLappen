@model KoLappen.ViewModels.RegisterUserViewModel
@addTagHelper"*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    ViewBag.Title = "AWA Intranet";
}

<form asp-controller="Account" asp-action="Register">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control custom" placeholder="E-mail" value="T1@test.com" />
    <span asp-validation-for="Email"></span>
    <br />
    <label asp-for="Firstname"></label>
    <input asp-for="Firstname" class="form-control custom" placeholder="Namn" value="test" />
    <span asp-validation-for="Firstname"></span>
    <br />
    <label asp-for="Lastname"></label>
    <input asp-for="Lastname" class="form-control custom" placeholder="Efternamn" value="test" />
    <span asp-validation-for="Lastname"></span>
    <br />
    @Html.LabelFor(m => m.Education)
    @Html.DropDownListFor(m => m.Education, Model.Educations)
    <br />
    @Html.LabelFor(m => m.JobLocation)
    @Html.DropDownListFor(m => m.JobLocation, Model.JobLocations)
    <br />
    <button type="submit" value="Register" class="btn btn-success">Registrera</button>
</form>