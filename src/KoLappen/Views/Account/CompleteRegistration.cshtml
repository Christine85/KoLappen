@model KoLappen.ViewModels.CompleteRegistrationViewModel
@addTagHelper"*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="icon" type="image/png" href="~/Images/favicon.png" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/kolappen.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
    <title></title>
</head>
<body>
    <div class="text-center col-md-4 col-md-offset-4">
        <h1>Slutför registrering</h1>
        <br />
    </div>
    <div class="container container-table">
        <div class="row vertical-center-row">
            <div class="text-center col-md-4 col-md-offset-4">
                <form asp-controller="Account" asp-action="CompleteRegistration">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control custom" placeholder="Email" value="Test" />
                    <span asp-validation-for="Email"></span>
                    <br />
                    <label asp-for="Firstname"></label>
                    <input asp-for="Firstname" class="form-control custom" placeholder="Namn" value="Test" />
                    <span asp-validation-for="Firstname"></span>
                    <br />
                    <label asp-for="Lastname"></label>
                    <input asp-for="Lastname" class="form-control custom" placeholder="Efternamn" value="Testsson" />
                    <span asp-validation-for="Lastname"></span>
                    <br />
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control custom" placeholder="Nytt lösenord" value="P@ssw0rd" />
                    <span asp-validation-for="Password"></span>
                    <br />
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control custom" placeholder="Bekräfta lösenord" value="P@ssw0rd" />
                    <span asp-validation-for="ConfirmPassword"></span>
                    <br />
                    <label asp-for="VerificationPassword"></label>
                    <input asp-for="VerificationPassword" class="form-control custom" placeholder="Verifikations lösenord" value="P@ssw0rd" />
                    <span asp-validation-for="VerificationPassword"></span>

                    @Model.PasswordResetToken
                    @Html.TextBox("PasswordResetToken", @Model.PasswordResetToken)
                    @*<input type="text" name="Add" value="@Model.PasswordResetToken>"*@
                    <br />
                    <button type="submit" value="CompleteRegistration" class="btn btn-success">Bekräfta</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
